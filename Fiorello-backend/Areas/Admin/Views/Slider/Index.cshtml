@model List<SliderVM>
@{
    ViewData["Title"] = "Index";
}

<style>
    .status-slider{
        width:25px;
        height:25px;
        border-radius:50%;
        cursor:pointer;
    }
    .status-true{
        background-color: greenyellow;
    }

    .status-false {
        background-color: red;
    }
</style>

<div class="container my-3">
    <h2 class="text-center">Sliders</h2>
    <div class="create-btn ">
        <a asp-action="Create" class="btn btn-success btn-rounded btn-fw">Create</a>
    </div>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Create Date
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Options
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var slider in Model)
                {
                    <tr>
                        <td class="py-1">
                            <img src="~/img/@slider.Image" alt="image" style="width:75px;height:75px;" />
                        </td>
                        <td>
                            @slider.CreateDate
                        </td>
                        <td>
                            <div data-id="@slider.Id" class="status-slider @(slider.Status ? "status-true":"status-false")"></div>
                        </td>
                        <td>
                            <a asp-action="Detail" asp-route-id="@slider.Id" class="btn btn-primary btn-rounded btn-fw">Detail</a>
                            <a asp-action="Edit" asp-route-id="@slider.Id" class="btn btn-warning btn-rounded btn-fw">Edit</a>
                            <form style="display: inline-block;" method="post" asp-action="Delete" asp-route-id="@slider.Id">
                                <button type="submit" class="btn btn-danger btn-rounded btn-fw">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            
            </tbody>
        </table>
    </div>
</div>

